<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Restaurante.Views.CRUDComandasView"
             Title="Gestionar Menus"
             xmlns:bindingContext="clr-namespace:Restaurante.ViewModels">


    <ContentPage.BindingContext>
        <bindingContext:CRUDComandasViewModel/>
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

        <Image Source="carta.png" WidthRequest="200" HeightRequest="200" Aspect="AspectFit" HorizontalOptions="Center"/>
        <Entry Placeholder="Nombre" Text="{Binding NuevoNombre, Mode=TwoWay}" />
        <Picker Title="Tipo" ItemsSource="{Binding Tipos}" SelectedItem="{Binding NuevoTipo,Mode=TwoWay}">

        </Picker>
        <Entry Placeholder="Precio" Keyboard="Numeric" Text="{Binding NuevoPrecio, Mode=TwoWay}" />


        <HorizontalStackLayout Spacing="10">
                <Button Text="Agregar" Command="{Binding AgregarCommand}" />
        </HorizontalStackLayout>

            <ListView ItemsSource="{Binding Elementos}"
             Margin="0,0,0,10"
          SelectedItem="{Binding ElementoSeleccionado}">
                <ListView.ItemTemplate>
                    
                    <DataTemplate>
                    
                        <ViewCell>
                            <Grid Padding="2" ColumnDefinitions="*,Auto">

                                <VerticalStackLayout Grid.Column="0">
                                    <Label Text="{Binding Nombre}" TextColor="Black" FontAttributes="Bold"/>
                                    <Label Text="{Binding Tipo}" TextColor="Gray" FontSize="10"/>
                                </VerticalStackLayout>


                                <Label Grid.Column="1"
                               Text="{Binding Precio, StringFormat='{0:F2}â‚¬'}"
                               TextColor="Black"
                               VerticalOptions="Center"
                               HorizontalOptions="End"
                               FontAttributes="Bold"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        


    </VerticalStackLayout>
    </ScrollView>
</ContentPage>
